# ============================================
# SUPABASE — from supabase.com > Settings > API
# ============================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# RESEND — from resend.com > API Keys
# ============================================
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=reports@yourdomain.com

# ============================================
# GOOGLE ADS API — from developers.google.com
# ============================================
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token_here
GOOGLE_ADS_CLIENT_ID=your_oauth_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_oauth_client_secret_here

# ============================================
# META ADS API — from developers.facebook.com
# ============================================
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# ============================================
# APP
# ============================================
NEXTAUTH_SECRET=pick_any_long_random_string_here
NEXT_PUBLIC_APP_URL=http://localhost:3000
